<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#ea986c"
        android:gravity="center"
        android:orientation="horizontal">

        <Chronometer
            android:id="@+id/timer_ch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight=".1"
            android:background="#1296db"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单选题"
            android:layout_weight="1"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="#fff"/>

        <Button
            android:id="@+id/submit_bt"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:layout_marginRight="10dp"
            android:layout_weight=".1"
            android:background="#1296db"
            android:textSize="16sp"
            android:text="提交"
            android:textColor="#fff" />
    </LinearLayout>
    <ScrollView android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_layout"
        android:layout_above="@id/bottom_layout"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <LinearLayout
            android:id="@+id/frag_main_layout"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/qsname_tv"
                style="@style/qs_style"
                android:textColor="#000000"
                android:text="1.下列说法正确的是:____"/>
            <RadioGroup
                android:id="@+id/qs_rg"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/rb_A"
                    style="@style/qs_style"
                    android:text="A.时间不可以改变"/>
                <RadioButton
                    android:id="@+id/rb_B"
                    style="@style/qs_style"
                    android:text="B.时间可以改变"/>
                <RadioButton
                    android:id="@+id/rb_C"
                    style="@style/qs_style"
                    android:text="C.不知道时间可不可以改变"/>
                <RadioButton
                    android:id="@+id/rb_D"
                    style="@style/qs_style"
                    android:text="D.时间是假象"/>
            </RadioGroup>
            <LinearLayout
                android:id="@+id/cb_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical">
                <CheckBox
                    android:id="@+id/cb_A"
                    style="@style/qs_style"
                    android:text="多选1"/>
                <CheckBox
                    android:id="@+id/cb_B"
                    style="@style/qs_style"
                    android:text="多选2"/>
                <CheckBox
                    android:id="@+id/cb_C"
                    style="@style/qs_style"
                    android:text="多选3"/>
                <CheckBox
                    android:id="@+id/cb_D"
                    style="@style/qs_style"
                    android:text="多选4"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ea986c"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/prev_iv"
                style="@style/bottom_icon"
                android:src="@mipmap/zuojiantou_1" />
            <ImageView
                style="@style/bottom_icon"
                android:src="@mipmap/option_icon"/>
            <ImageView
                android:id="@+id/next_iv"
            style="@style/bottom_icon"
            android:src="@mipmap/youjiantou"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                style="@style/bottom_text"
                android:text="上一题"/>
            <TextView
                android:id="@+id/qsnumber_tv"
                style="@style/bottom_text"
                android:text="1/10"/>
            <TextView
                style="@style/bottom_text"
                android:text="下一题"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>